<div class="big-container freestyle-manage-wrapper flexed-item ">
    <form action="/send-freestyle" method="post" class="send-freestyle-form" enctype="multipart/form-data">
        {{!-- {{#if msg}}
        <p class="msg {{msg.status}}">{{msg.txt}}</p>
        {{/if}} --}}
        <h3 class="form-title">Send your freestyle</h3>
        <div class="form-item-wrapper flexed-item">
            <label for="freestyle-nickname" class="label-name label">What is your nickname ?</label>
            <input id="freestyle-nickname" type="text" name="nickname" class="input-text input" placeholder="Nickname"
                value="Travis Scott">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="freestyle-title" class="label-name label">What is the name of your freestyle?</label>
            <input id="freestyle-title" type="text" name="title" class="input-text input" placeholder="Title"
                value="Spitting fire">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="freestyle-descr" class="label-descr label">Description</label>
            <input id="freestyle-descr" type="text" name="description" class="input-text input"
                placeholder="Describe your freestyle" value="Representing Brooklyn">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="social-media" class="label">Plug one of your socials</label>
            <input id="social-media" type="text" name="social" class="input" value="https://www.instagram.com/?hl=fr">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="video-file" class="label">Video</label>
            <input id="video-file" type="text" name="url" class="input"
                value="https://www.youtube.com/embed/vHU6ZRQJ50Q">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="image-file" class="label">Image</label>
            <input id="image-file" type="file" name="image" class="input">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="style" class="label">Style</label>
            <input id="style" type="text" name="style" class=" input" value="Drill">
        </div>
        <button class="button-primary add-sneaker-btn">Send my freestyle</button>
    </form>
</div>